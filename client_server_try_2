void loop()
{
  disp_time();
  
  //Serial.println("Loop");
  
  
    client=server.available(); // listen for incoming clients
    
    if(client)
    {
    
        Serial.println("New client");
      
            while(client.available())
            {
              
                char c=client.read();
                Serial.write(c);
                report[ch]=c;
                report[ch+1]='\0';
                ch++;
                
                 
            } // client.available()
            Serial.println();
    
    //prints the content stored in report
   /* 
     for(int i=0;i< ch;i++)
     {
       Serial.write(report[i]);
     }
     
     Serial.println();
     */ 
     
     String request(report);
     
     if(request.substring(0,4) !="POST")
     {
       Serial.println("Not POST");
     }
     
    // Serial.println("Parse Header");
    
     else
     {
       Serial.println("Parsing Header...");
       parse_header();
       
     }//Is a POST Request
       
       
    }//if(client)
    // client.stop();
        //Serial.println("Client disconnected");
        
        delay(1000);
   // conn(); //send data 
   
    
} // end of loop1
